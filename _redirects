# Cloudflare Pages Redirects - Clean URLs
# Format: /path /actual-file.html status-code

# Root URL - serve homepage
/ /pages/home/index.html 200

# Clean URLs - rewrite to actual files (200 = rewrite, keeps URL clean)
/about /pages/about/index.html 200
/services /pages/services/index.html 200
/contact /pages/contact/index.html 200
/blog /pages/blog/index.html 200
/blog/post /pages/blog/post.html 200
/work-with-us /pages/work-with-us/index.html 200

# Redirect /index.html to root (301 = permanent redirect)
/index.html / 301

# SEO Files - serve directly
/robots.txt /robots.txt 200
/sitemap.xml /sitemap.xml 200

# Static assets - let them pass through (no redirect needed)
/assets/* /assets/* 200
/components/* /components/* 200
/config/* /config/* 200

# Catch all - serve homepage for 404s (404 = show 404 page, but serve homepage content)
/* /pages/home/index.html 200

